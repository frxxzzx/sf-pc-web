/**
 * 对一类共有前缀进行统一封装
 *
 * @params external  = { stuffix?,prefix?} 不需要特定的指 传入''
 */
export function AuthorityRequestWrapper(options, external: any = {}) {
  const prefix = '/ifaas-authority';
  const stuffix = VERSION;
  options.url = addWing(options.url, prefix, stuffix, external);
  return request(options);
}
/*
  为url添加前缀和后缀
*/
function addWing(argUrl, argPrefix, argStuffix, external: any = {}) {
  if (external.prefix !== undefined) {
    argPrefix = external.prefix;
  }
  argUrl = argPrefix + argUrl;
  if (external.stuffix !== undefined) {
    argStuffix = external.stuffix;
  }
  // 后面有无/ 所指代的路径是不一样的
  if (argStuffix !== '') {
    argUrl += '/' + argStuffix;
  }
  return argUrl;
}