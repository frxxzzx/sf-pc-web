<script>
    $('.footer .item ').on('touchend', function () {
        $(this).addClass('selected').siblings().removeClass('selected');
        let pageDom = $($(this).attr("data-rel"));
        if (!pageDom.hasClass('selected')) {
            pageDom.addClass('selected').siblings().removeClass('selected');
        }
    })
    $('.page').on("swiping", function (event) {
        let $pageContainerDom = $(".page-container");
        if (Math.abs(event.detail.distanceX) > 30) {

            $pageContainerDom.css({
                marginLeft: -$(this).width() * $(this).index() + event.detail.distanceX
            })

            if (Math.abs(event.detail.distanceX) > 150) {
                $pageContainerDom.css({
                    marginLeft: -$(this).width() * ($(this).index() + 1)
                })
            }
        }
        event.preventDefault();
    })
</script>

